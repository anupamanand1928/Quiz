<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clearwhite"
    android:orientation="vertical"

    tools:context="com.example.anupam.quiz.Splash">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/quizlogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_marginTop="100px"
        android:padding="20px"
        android:id="@+id/start_btn"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textColor="@color/googleGreen"/>

    <Button
        android:layout_marginTop="50px"
        android:id="@+id/level_btn"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textColor="@color/googleRed"/>

    <Button
        android:layout_marginTop="50px"
        android:id="@+id/rate_btn"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textColor="@color/googleBlue"/>

    <Button
        android:layout_marginTop="50px"
        android:id="@+id/quit_btn"
        android:background="@drawable/buttonstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:textColor="@color/googleYellow"/>
        </LinearLayout>

</LinearLayout>